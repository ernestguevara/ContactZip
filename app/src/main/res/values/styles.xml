<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NormalTextView">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/blueDark</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/rounded_bg_blue_primary</item>
    </style>

    <style name="TextViewToButtonStyle">
        <item name="android:textFontWeight" tools:ignore="NewApi">450</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/bluePrimary</item>
        <item name="placeholderText">@color/bluePrimary</item>
        <item name="boxStrokeColor">@color/bluePrimary</item>
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>